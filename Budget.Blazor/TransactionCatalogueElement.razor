@using Budget.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime Js

@if (Transactions == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Account</th>
                <th>Category</th>
                <th>Tag</th>
                <th>Amount</th>
                <th>When</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Transactions)
            {
                <tr>
                    <td style="background-color: @transaction.Account.Color">@transaction.Account.Name</td>
                    <td style="background-color: @transaction.Category.Color">@transaction.Category.Name</td>
                    <td style="background-color: @transaction.Tag.Color">@transaction.Tag.Name</td>
                    <td style="background-color: @transaction.Amount.ToColor()"><a href="@Constants.Transaction.GetViewerPath(transaction.Id)">@transaction.Amount.ToCurrency()</a></td>
                    <td>@transaction.When.ToShortDateString()</td>
                    <td>@transaction.Description</td>
                    <td><a href="@Constants.Transaction.GetUpsertPath(transaction.Id)" class="btn btn-info">Edit</a></td>
                    <td><a @onclick="(() => Delete(transaction.Id))" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Constants.Transaction.GetUpsertPath()">Create an Transaction</a>
}


@code {

    [Parameter]
    public IList<Transaction> Transactions { get; set; }

    private async Task Delete(long id)
    {
        var confirm = await Js.InvokeAsync<bool>("confirm", "Do you want to delete this transaction?");
        if (confirm)
        {
            await Http.DeleteAsync($"Api/Transaction/{id}");
            NavigationManager.NavigateTo(Constants.Transaction.CataloguePath);
        }
    }
}